%%======================================================================
%%		epsinc (graphicx): eps-Bilder einfuegen
%%		\epsinc{bild.eps}{scale=1}{Bildunterschrift}
%%======================================================================
\newcommand{\epsinc}[3]{
	\begin{figure}[hbt]
		\begin{center}
			\vspace{3ex}
			%\includegraphics[width=#2]{#1}
			\includegraphics[#2]{#1}
			\caption{\label{#1}\small#3}
		\end{center}
	\end{figure}
}	

%%======================================================================
%%		missing: eine Randnote fuer fehlende Teile
%%		\missing{Beweis fehlt noch}
%%======================================================================
\newcommand{\missing}[1]{\textcolor{red}{(\marginpar[\hfill\huge\bf$\longrightarrow$ Hier fehlt was!]{\huge\bf$\longleftarrow$ Hier fehlt was!}#1)}}

